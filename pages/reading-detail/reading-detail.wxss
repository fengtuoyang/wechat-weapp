/* pages/reading/reading-detail/reading-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.head-audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 180rpx;
  left: 50%;
  margin-left: -51rpx;
  opacity: .6;
}

.author-date {
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
  vertical-align: middle;
}

.const-text, .date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
}

.tool{
  margin-top: 20rpx;
}

.tool-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.tool-img image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}

.hor{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.desc{
  font-size: 24rpx;
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}