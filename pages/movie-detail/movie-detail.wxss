/* pages/movie-detail/movie-detail.wxss */
@import '/template/stars/stars.wxss';

.movie-detail-container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  /*图片变模糊  */
  -webkit-filter: blur(20px);
}

.head-img-cover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.movie-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.movie-countryYear {
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.like {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.like-num {
  color: #f21146;
  margin-right: 10rpx;
}

.like-font {
  color: #666;
  margin-right: 30rpx;
}

.movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.movie-summary {
  margin-top: 40rpx;
  margin-left: 40rpx;
  color: #777;
}

.original-title {
  font-size: 26rpx;
  color: #1f3463;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  margin-bottom: 10rpx;
}

.mark {
  font-size: 22rpx;
  color: #999;
  margin-right: 30rpx;
  white-space: nowrap;
}

.hr {
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
  margin-top: 45rpx;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 40rpx;
  font-size: 22rpx;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.casts {
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.casts-list {
  width: 100%;
  margin-top: 20rpx;
  white-space: nowrap;
}

.casts-container {
  width: 170rpx;
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  text-align: center;
  white-space: normal;
}

.casts-img {
  width: 170rpx;
  height: 210rpx;
}

.casts-name {
  margin: 10rpx auto 0;
  font-size: 22rpx;
}
